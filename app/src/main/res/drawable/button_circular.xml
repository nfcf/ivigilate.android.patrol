<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="oval">
            <solid
                android:color="@color/translucent_light_grey" />
            <stroke
                android:width="4dp"
                android:color="@color/white"/>
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid
                android:color="@color/transparent" />
            <stroke
                android:width="4dp"
                android:color="@color/white"/>
            <corners
                android:radius="5dp" />
        </shape>
    </item>
</selector>